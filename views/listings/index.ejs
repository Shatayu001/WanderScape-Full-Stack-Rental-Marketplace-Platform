<% layout("/Layouts/boilerplate") %>
    <style>
        #filters {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
        }

        .filter {
            text-align: center;
            margin-right: 2rem;
            margin-top: 2rem;
            opacity: 0.7;
        }

        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }

        .filter p {
            font-size: 0.8rem;
        }

        .tax-info {
            display: none;
        }

        .tax-toggle {
            border: 1px solid black;
            border-radius: 1rem;
            height: 3.25rem;
            padding: 1rem;
            margin-left: 2rem;
            display: flex;
            align-items: center;
        }

        #noResultsMessage {
            display: none;
            /* hidden by default */
            font-size: 1.2rem;
            text-align: center;
            margin-top: 4rem;
            color: #6c757d;
            opacity: 0;
            transition: opacity 0.4s ease-in-out, transform 0.4s ease-in-out;
            transform: translateY(10px);
        }

        #noResultsMessage.show {
            display: block;
            opacity: 1;
            transform: translateY(0);
        }

        #noResultsMessage i {
            color: #ff385c;
            margin-right: 0.4rem;
        }

        /* Horizontal scroll for small screens */
        @media (max-width: 768px) {
            #filters {
                flex-wrap: nowrap;
                overflow-x: auto;
                overflow-y: hidden;
                white-space: nowrap;
                margin-top: 0.8rem;
                justify-content: flex-start;
                gap: 1rem;
                padding-bottom: 0.5rem;
                scrollbar-width: none;
                /* hide scrollbar for Firefox */
            }

            #filters::-webkit-scrollbar {
                display: none;
                /* hide scrollbar for Chrome/Safari */
            }

            .filter {
                flex: 0 0 auto;
                margin: 0 0.8rem;
                text-align: center;
            }

            .tax-toggle {
                flex: 0 0 auto;
                margin-left: 1rem;
                padding: 0.8rem 1rem;
                white-space: nowrap;
            }
        }

        /* Slightly compact filters on very small screens */
        @media (max-width: 480px) {
            .filter p {
                font-size: 0.7rem;
            }

            .tax-toggle label {
                font-size: 0.75rem;
            }
        }
    </style>

    <div id="filters">
        <div class="filter">
            <div> <i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>
        <div class="filter">
            <div> <i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </div>
        <div class="filter">
            <div> <i class="fa-solid fa-mountain-city"></i></div>
            <p>Iconic Cities</p>
        </div>
        <div class="filter">
            <div> <i class="fa-solid fa-mountain"></i></div>
            <p>Mountains</p>
        </div>
        <div class="filter">
            <div> <i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castles</p>
        </div>
        <div class="filter">
            <div> <i class="fa-solid fa-person-swimming"></i></div>
            <p>Amazing pools</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
        </div>
        <div class="filter">
            <div> <i class="fa-solid fa-cow"></i></div>
            <p>Farms</p>
        </div>
        <div class="filter">
            <div> <i class="fa-solid fa-snowflake"></i></div>
            <p>Arctic</p>
        </div>
        <div class="filter">
            <div> <i class="fa-solid fa-igloo"></i></div>
            <p>Domes</p>
        </div>
        <div class="filter">
            <div> <i class="fa-solid fa-ship"></i></div>
            <p>Boats</p>
        </div>

        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                <label class="form-check-label" for="switchCheckDefault">Desplay total after taxes</label>
            </div>
        </div>
    </div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for(let listing of allListing){ %>
            <a href="/listings/<%=listing._id%>" class="listing-link">
                <div class="card cols listing-card" data-category="<%= listing.category %>">
                    <img class="card-img-top" src="<%=listing.image.url%>" style="height: 20rem;" alt="Card image cap">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b>
                                <%=listing.title %> <br>
                            </b>
                            &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> / night
                                <i class="tax-info">&nbsp;&nbsp; +18% GST</i>
                        </p>
                    </div>
                </div>
            </a>
            <% } %>
    </div>

    <div id="noResultsMessage" class="text-center mt-8 mb-5" style="font-size: 1.2rem;">
        <p class="text-danger mb-1" style="font-weight: 500;">
            <i class="fa-solid fa-circle-exclamation"></i> No stays found in this category ðŸ˜•
        </p>
        <p class="text-secondary" style="font-size: 1rem;">
            Discover more unique stays by exploring other categories or viewing all listings.
        </p>
        <a href="/listings" class="btn btn-danger mt-3 px-4">Back to all listings</a>
    </div>





    <script>
        let taxSwitch = document.getElementById("switchCheckDefault");
        taxSwitch.addEventListener("click", () => {
            let taxInfo = document.getElementsByClassName("tax-info");
            // console.log(taxInfo);
            for (info of taxInfo) {
                if (info.style.display != "inline") {
                    info.style.display = "inline";
                } else {
                    info.style.display = "none";
                }

            }
        })

        const filters = document.querySelectorAll(".filter");
        const allCards = document.querySelectorAll(".listing-card");
        const noResultsMessage = document.getElementById("noResultsMessage");

        function updateNoResultsMessage() {
            const visibleCards = Array.from(allCards).filter(card => card.parentElement.style.display !== "none");
            if (visibleCards.length === 0) {
                noResultsMessage.classList.add("show");
            } else {
                noResultsMessage.classList.remove("show");
            }
        }

        filters.forEach(filter => {
            filter.addEventListener("click", () => {
                const category = filter.querySelector("p").innerText.trim();
                filters.forEach(f => f.classList.remove("active-filter"));
                filter.classList.add("active-filter");

                let visibleCount = 0;
                allCards.forEach(card => {
                    const listingCategory = card.dataset.category?.trim();
                    if (listingCategory === category) {
                        card.parentElement.style.display = "block";
                        visibleCount++;
                    } else {
                        card.parentElement.style.display = "none";
                    }
                });

                if (visibleCount === 0) {
                    noResultsMessage.classList.add("show");
                } else {
                    noResultsMessage.classList.remove("show");
                }
            });
        });

        updateNoResultsMessage();

        const style = document.createElement("style");
        style.innerHTML = `
        .active-filter {
            opacity: 1 !important;
            border-bottom: 2px solid #007bff;
            transform: scale(1.05);
        }
    `;
        document.head.appendChild(style);
    </script>