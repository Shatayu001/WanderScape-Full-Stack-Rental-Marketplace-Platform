    <style>
        @media (max-width: 768px) {

            /* prevent horizontal overflow */
            html,
            body {
                overflow-x: hidden;
            }

            /* general layout fix */
            .show-container .row {
                margin: 0 !important;
                justify-content: center !important;
            }

            /* titles & headings */
            .show-container h3 {
                text-align: center !important;
                font-size: 1.2rem !important;
                font-weight: 600 !important;
                margin: 0.5rem 0 0.7rem 0 !important;
            }

            /* fix for column offsets */
            .show-container [class*="offset-"] {
                margin-left: 0 !important;
            }

            /* fix all col-* widths */
            .show-container [class*="col-"] {
                flex: 0 0 100% !important;
                max-width: 100% !important;
            }

            /* card styling */
            .show-container .card {
                width: 95% !important;
                margin: 0 auto 1.2rem auto !important;
                border-radius: 12px !important;
                box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            }

            /* card image */
            .show-container .card img {
                width: 100% !important;
                height: auto !important;
                border-radius: 12px 12px 0 0;
                object-fit: cover;
            }

            /* readable text */
            .show-container .card-body {
                padding: 1rem !important;
                font-size: 0.95rem !important;
                line-height: 1.5 !important;
            }

            /* review cards fix */
            .show-container .row .card {
                width: 95% !important;
                margin: 0.8rem auto !important;
            }

            /* map container */
            #map {
                width: 100% !important;
                height: 300px !important;
                border-radius: 12px !important;
                overflow: hidden !important;
            }

            /* map section */
            .show-container h3+#map {
                margin-top: 0.8rem !important;
            }

            /* buttons alignment */
            .btns {
                display: flex;
                flex-direction: column;
                align-items: center;
                gap: 0.6rem;
            }

            .btns .btn {
                width: 60% !important;
            }
        }
    </style>

    <div class="show-container">
        <div class="row mt-3">
            <div class="col-8 offset-3">
                <h3>
                    <%= listing.title %>
                </h3>
                <% if (listing.category) { %>
                    <p class="listing-category">
                        <%= listing.category %>
                    </p>
                    <% } %>
            </div>
            <div class="card  col-6 offset-3 show-card listing-card">
                <img class="card-img-top show-img" src="<%= listing.image.url %>" alt="Card image cap">
                <div class="card-body">
                    <p class="card-text">

                    <p>Owned by :
                        <i>
                            <%= listing.owner.username %>
                        </i>
                    </p>
                    <p>
                        <%= listing.description %>
                    </p>
                    <p>&#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> / night</p>
                    <p>
                        <%= listing.location %>
                    </p>
                    <p>
                        <%= listing.country %>
                    </p>

                    </p>
                </div>
            </div>
            <br>
            <% if(currUser && listing.owner.equals(currUser._id)){ %>
                <div class="btns">
                    <a href="<%=listing._id%>/edit" class=" btn btn-dark col-1 offset-3 edit-btn">Edit</a>

                    <form method="post" action="/listings/<%=listing._id %>?_method=DELETE">
                        <button class="btn btn-dark offset-5">delete</button>
                    </form>
                </div>
                <% } %>

                    <div class="col-8 offset-3 mt-3 mb-3">
                        <% if(currUser){ %>
                            <hr>
                            <h4>Leave a Review</h4>
                            <form action="/listings/<%=listing._id %>/reviews" method="post" novalidate
                                class="needs-validation">
                                <div>
                                    <div>
                                        <label for="rating" class="form-label">Rating</label>
                                        <fieldset class="starability-slot">
                                            <input type="radio" min="1" max="5" id="no-rate" class="input-no-rate"
                                                name="review[rating]" value="1" checked aria-label="No rating." />
                                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                            <label for="first-rate1" title="Terrible">1 star</label>
                                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                            <label for="first-rate2" title="Not good">2 stars</label>
                                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                            <label for="first-rate3" title="Average">3 stars</label>
                                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                            <label for="first-rate4" title="Very good">4 stars</label>
                                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                            <label for="first-rate5" title="Amazing">5 stars</label>
                                        </fieldset>
                                    </div>
                                    <div class="mt-3 mb-3">
                                        <label for="comment" class="form-label">Comment</label>
                                        <textarea id="comment" cols="30" rows="5" class="form-control" required
                                            name="review[comment]"></textarea>
                                        <div class="invalid-feedback">
                                            Please add some comments for review.
                                        </div>
                                    </div>
                                    <button class="btn btn-outline-dark"> Submit</button>
                                </div>
                            </form>
                            <% } %>
                                <hr>
                                <% if(listing.reviews.length> 0){ %>
                                    <div class="row">
                                        <p><b>All Reviews</b></p>
                                        <% for(review of listing.reviews){ %>
                                            <div class="card col-5 ms-3 mb-3">
                                                <div class="card-body">
                                                    <h5 class="card-title">
                                                        @<%= review.author.username %>
                                                    </h5>
                                                    <p class="starability-result card-text"
                                                        data-rating="<%= review.rating%>">
                                                        Rated: <%= review.rating%> stars
                                                    </p>
                                                    <p class="card-text">
                                                        <%= review.comment%>
                                                    </p>
                                                    <form class="mb-3" method="post"
                                                        action="/listings/<%=listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                                        <button class="btn btn-dark btn-sm ">delete</button>
                                                    </form>
                                                </div>
                                            </div>
                                            <% } %>
                                    </div>
                                    <% } %>
                    </div>
                    <div class="col-8 offset-3 mt-3 mb-3">
                        <h3>Where you' ll be</h3>
                        <div id="map"></div>
                    </div>
        </div>
    </div>

    <script src="/js/map.js"></script>